%h5.text-center
  - if round > 1
    = link_to games_round_url(round_id: round-1), remote: true do
      %span.glyphicon.glyphicon-triangle-left
  = t('resultados_jornada_acb', round: round)
  = link_to games_round_url(round_id: round+1), remote: true do
    %span.glyphicon.glyphicon-triangle-right

%table.table.table-striped
  - games.each do |game|
    = render game
