.row
  .col-xs-12.detail
    .col-xs-2.row
      = player_image @player
    .col-xs-8.row
      .col-xs-12
        %h1= "##{@player.number} <span class='split'>|</span> #{@player.name}".html_safe
      .col-xs-12
        .position_team= "#{@player.position.text} <span class='split'>|</span> #{@player.team}".html_safe
      .col-xs-12
        .col-xs-6.col-md-2.box.row
          .label= t("val")
          %br
          .value= @player.promedio_stat "v"
        .col-xs-6.col-md-2.box.row
          .label= t("pt")
          %br
          .value= @player.promedio_stat "pt"
        .col-xs-6.col-md-3.box.row
          .label= t("reb")
          %br
          .value= @player.promedio_stat "reb"
        .col-xs-6.col-md-2.box.row
          .label= t("as")
          %br
          .value= @player.promedio_stat "a"
        .col-xs-6.col-md-2.box.row
          .label= t("t3")
          %br
          .value= @player.promedio_stat "t3"
    .col-xs-2
      = @player.date_of_birth
    
              
  .col-xs-12
    = render partial: "statistics/statistics_player", locals: {statistic: @player.statistics.last}

  .col-xs-12
    = line_chart @broker_data, @options
    = line_chart @stats_data, @options
