%tr{:class => [player.position, player.try(:team).try(:rest_round_1) == CURRENT_ROUND || player.try(:team).try(:rest_round_2) == CURRENT_ROUND ? "descansa" : ""]}
  %td
    = player_image player, "height_22"
    = team_image player.team, 'height_22'
  %td
    = playing_cup player.team 
    = link_to player.name, player_path(player)
  %td
    = player_price player.current_price
  %td
    = player.played_games
  %td
    = player.total_minutos
  %td
    = player.promedio_minutos
  %td
    %b=sum.sum.round(2)
  %td.important
    = player.promedio_stat @field
  %td
    = player.por_40_minutos @field