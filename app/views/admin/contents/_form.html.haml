%td{colspan: 5}
  = form_for @content, url: @content.new_record? ? admin_contents_path : admin_content_path(@content), remote: true, html: {class: "form-horizontal"} do |f|
    .form-group
      .col-md-3.control-label= f.label "Title"
      .col-md-5= f.text_field :title, class: 'string form-control'
    .form-group
      .col-md-3.control-label= f.label "Body"
      .col-md-5= f.text_field :body, class: 'string form-control'
    .form-group
      .col-md-3.control-label= f.label "Published"
      .col-md-5= f.check_box :published
    .form-group
      .col-md-3
      .col-md-5
        = f.submit "Save", class: "btn btn-primary"
        %button.btn.btn-link.cancel Cancel