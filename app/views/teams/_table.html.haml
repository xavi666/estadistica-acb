%table.table.statistic
  %thead
    %tr
      %th="#"
      %th=t("team")    
      %th="J"
      %th="G"
      %th="P"
  %tbody
    - teams.each do |team|
      %tr
        %td= team.position
        %td
          = team_image team
          = link_to team.short_code, team
        %td= team.played
        %td= team.won
        %td= team.lost